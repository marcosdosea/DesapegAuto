@{
    ViewData["Title"] = "Página Inicial";
}

<div class="home-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="welcome-section">
                    <h1 class="welcome-text">Olá, Usuário</h1>
                    <div class="user-actions">
                        <a href="#" class="btn btn-link user-icon">
                            <i class="fas fa-user"></i>
                        </a>
                        <a href="#" class="btn btn-link help-icon">
                            <i class="fas fa-question-circle"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="search-section">
                <div class="search-card">
                    <form asp-controller="Pesquisa" asp-action="Index" method="get">
                        <div class="search-input-group">
                            <input type="text" name="termo" class="form-control search-input"
                                   placeholder="Selecione marca ou modelo do veículo" />
                        </div>
                        <div class="search-button-group mt-3">
                            <button type="submit" class="btn btn-primary search-btn">Ver anúncios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h2 class="section-title">Alguns anúncios</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="vehicle-card">
                <div class="vehicle-image">
                    <img src="~/images/toyota-corolla.jpg" alt="Toyota Corolla" class="img-fluid" />
                </div>
                <div class="vehicle-info">
                    <h3 class="vehicle-title">Toyota Corolla</h3>
                    <p class="vehicle-year">2020</p>
                    <p class="vehicle-price">R$ 95.000</p>
                    <div class="vehicle-actions">
                        <a href="#" class="btn btn-outline-primary vehicle-details-btn">Ver detalhes</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="vehicle-card">
                <div class="vehicle-image placeholder-image">
                    <i class="fas fa-image"></i>
                </div>
                <div class="vehicle-info">
                    <h3 class="vehicle-title">Honda Civic</h3>
                    <p class="vehicle-year">2019</p>
                    <p class="vehicle-price">R$ 85.000</p>
                    <div class="vehicle-actions">
                        <a href="#" class="btn btn-outline-primary vehicle-details-btn">Ver detalhes</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
            <div class="vehicle-card">
                <div class="vehicle-image placeholder-image">
                    <i class="fas fa-image"></i>
                </div>
                <div class="vehicle-info">
                    <h3 class="vehicle-title">Volkswagen Jetta</h3>
                    <p class="vehicle-year">2021</p>
                    <p class="vehicle-price">R$ 105.000</p>
                    <div class="vehicle-actions">
                        <a href="#" class="btn btn-outline-primary vehicle-details-btn">Ver detalhes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-controller="Pesquisa" asp-action="Index" class="btn btn-primary">Ver todos os anúncios</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Adicionar funcionalidade de busca dinâmica se necessário
        $(document).ready(function() {
            $('.search-input').on('focus', function() {
                $(this).parent().addClass('focused');
            });

            $('.search-input').on('blur', function() {
                $(this).parent().removeClass('focused');
            });
        });
    </script>
}

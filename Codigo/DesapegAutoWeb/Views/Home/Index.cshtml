@model IEnumerable<DesapegAutoWeb.Models.AnuncioViewModel>

@{
    ViewData["Title"] = "Home";
}

<div class="hero" style="padding: 120px 0; text-align: center;">
    <div class="container">
        <div class="hero-content">
            <h1 class="display-1">Encontre seu próximo<br>carro dos sonhos</h1>
            <p class="hero-subtitle"
                style="font-size: 1.25rem; color: var(--text-secondary); max-width: 600px; margin: 0 auto 48px;">
                A plataforma mais segura e elegante para comprar e vender veículos.
            </p>

            <form class="search-bar-container" action="/Home/Search" method="get">
                <input type="text" class="search-input" placeholder="Buscar por marca, modelo..." name="q">
                <button type="submit" class="btn btn-primary btn-icon" style="width: 32px; height: 32px; margin: 4px;">
                    <i class="fas fa-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex justify-between align-center mb-4">
        <h2 class="section-title">Destaques</h2>
        <a asp-controller="Veiculo" asp-action="Index" class="btn btn-outline btn-sm">Ver todos</a>
    </div>

    <div class="grid grid-cols-3">
        @if (Model?.Any() ?? false)
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-image">
                        <img src="https://images.unsplash.com/photo-1494976388531-d1058494cdd8?auto=format&fit=crop&q=80&w=800"
                            alt="@(item.Veiculo?.NomeModelo ?? "Veículo")">
                    </div>
                    <div class="card-content">
                        <h3 class="card-title">@(item.Veiculo?.NomeMarca ?? "") @(item.Veiculo?.NomeModelo ?? "")</h3>
                        <div class="card-price">@(item.Veiculo?.Preco.ToString("C") ?? "R$ 0,00")</div>
                        <div class="card-meta">
                            <span><i class="fas fa-calendar"></i> @(item.Veiculo?.Ano ?? 0)</span>
                            <span><i class="fas fa-tachometer-alt"></i> @(item.Veiculo?.Quilometragem.ToString("N0") ?? "0") km</span>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-span-3 text-center">
                <p class="text-muted">Nenhum veículo em destaque no momento.</p>
            </div>
        }
    </div>
</div>

@model DesapegAutoWeb.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="da-page">
    <h1 class="da-title">Excluir Categoria</h1>

    <div class="da-card da-card-pad">
        <div class="da-confirm-box">
            <p>Tem certeza que deseja excluir esta categoria?</p>
        </div>

        <div class="da-detail-list">
            <div class="da-detail-item">
                <p class="da-detail-item-label">Nome</p>
                <p class="da-detail-item-value">@Model.Nome</p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="da-action-row">
                <button type="submit" class="da-btn da-btn-danger">Excluir</button>
                <a asp-action="Index" class="da-btn da-btn-outline">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@model IEnumerable<DesapegAutoWeb.Models.CategoriaViewModel>
@{
    ViewData["Title"] = "Administracao de Categorias";
    var categorias = Model?.ToList() ?? new List<DesapegAutoWeb.Models.CategoriaViewModel>();
}

<div class="da-page">
    <h1 class="da-title">Administracao</h1>

    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <div class="alert alert-success" role="alert">@successMessage</div>
    }

    @if (TempData["ErrorMessage"] is string errorMessage)
    {
        <div class="alert alert-danger" role="alert">@errorMessage</div>
    }

    <div class="da-split-layout">
        <section class="da-card da-card-pad">
            <h2 class="da-subtitle">Cadastrar Categoria</h2>

            <form asp-action="Create" method="post" class="da-stack">
                <div class="da-field">
                    <label class="da-label" for="Nome">Nome da Categoria</label>
                    <input class="da-input" id="Nome" name="Nome" placeholder="Digite o nome da categoria" required />
                </div>
                <button type="submit" class="da-btn da-btn-primary da-btn-wide">Inserir Categoria</button>
            </form>
        </section>

        <section class="da-card da-card-pad">
            <h2 class="da-subtitle">Categorias Existentes</h2>

            @if (categorias.Any())
            {
                <div class="da-list-rows">
                    @foreach (var item in categorias)
                    {
                        <div class="da-list-row">
                            <span class="da-list-name">@item.Nome</span>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="da-link-danger">Remover</a>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="da-empty">Nenhuma categoria cadastrada.</div>
            }

            <div class="da-nav-row">
                <a asp-controller="Marca" asp-action="Index" class="da-btn da-btn-outline">Ir para Marcas</a>
                <a asp-controller="Modelo" asp-action="Index" class="da-btn da-btn-outline">Ir para Modelos</a>
            </div>
        </section>
    </div>
</div>

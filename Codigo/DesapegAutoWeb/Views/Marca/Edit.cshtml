@model DesapegAutoWeb.Models.MarcaViewModel

@{
    ViewData["Title"] = "Editar Marca";
}

<div class="da-page">
    <h1 class="da-title">Editar Marca</h1>

    <div class="da-card da-card-pad" style="max-width:480px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="da-form-grid">
                <div class="da-field">
                    <label asp-for="Nome" class="da-label">Nome</label>
                    <input asp-for="Nome" class="da-input" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="da-action-row">
                <button type="submit" class="da-btn da-btn-primary">Salvar</button>
                <a asp-action="Index" class="da-btn da-btn-outline">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model DesapegAutoWeb.Models.MarcaViewModel

@{
    ViewData["Title"] = "Excluir Marca";
}

<div class="container mt-4">
    <div class="dashboard-header">
        <h1 class="admin-title">Excluir Marca</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="admin-card text-center">
                <h2 class="text-danger">Tem certeza que deseja excluir esta marca?</h2>
                <hr />
                <div class="my-4">
                    <p class="lead"><strong>Marca:</strong> @Html.DisplayFor(model => model.Nome)</p>
                    <p class="text-muted">ID: @Html.DisplayFor(model => model.Id)</p>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger admin-btn">
                        <i class="fa-solid fa-trash-can me-2"></i> Excluir
                    </button>
                    <a asp-action="Index" class="btn btn-secondary mt-3">
                        <i class="fa-solid fa-arrow-left me-2"></i> Voltar para a Lista
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
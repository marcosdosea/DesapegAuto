@model IEnumerable<DesapegAutoWeb.Models.MarcaViewModel>

@{
    ViewData["Title"] = "Administração";
}

<div class="container mt-4">
    <div class="dashboard-header">
        <h1 class="admin-title">Administração</h1>
        <div class="user-actions">
            <span class="welcome-text">Olá, Administrador</span>
            <a href="#" class="user-icon">
                <i class="fa-solid fa-user-circle"></i>
            </a>
            <a href="#" class="help-icon">
                <i class="fa-solid fa-circle-question"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="admin-card h-100">
                <h2 class="section-title">Cadastrar Marca</h2>
                <form asp-action="Create" method="post" class="mt-3">
                    <div class="form-group mb-3">
                        <label for="nomeMarca" class="form-label">Nome da Marca</label>
                        <input type="text" class="form-control" id="nomeMarca" name="Nome" required placeholder="Ex: Toyota">
                    </div>
                    <button type="submit" class="admin-btn">Inserir Marca</button>
                </form>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="admin-card h-100">
                <h2 class="section-title">Marcas Existentes</h2>
                @if (Model.Any())
                {
                    <ul class="list-unstyled mt-3">
                        @foreach (var item in Model)
                        {
                            <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span>@Html.DisplayFor(modelItem => item.Nome)</span>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Remover</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fa-solid fa-car-side empty-state-icon"></i>
                        <p>Nenhuma marca cadastrada.</p>
                    </div>
                }

                <div class="mt-4 text-end">
                    <a asp-action="Index" asp-controller="Categoria" class="btn btn-secondary me-2">Ir para Categorias</a>
                    <a asp-action="Index" asp-controller="Modelo" class="btn btn-secondary">Ir para Modelos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

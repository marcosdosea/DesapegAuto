@model DesapegAutoWeb.Models.VeiculoViewModel

@{
    ViewData["Title"] = "Novo Veículo";
}

<div class="da-page">
    <h1 class="da-title">Novo Veículo</h1>

    <div class="da-card da-card-pad">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="da-form-grid">
                <div class="da-field">
                    <label asp-for="IdConcessionaria" class="da-label">Concessionária</label>
                    <input asp-for="IdConcessionaria" class="da-input" />
                    <span asp-validation-for="IdConcessionaria" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="IdMarca" class="da-label">Marca</label>
                    <input asp-for="IdMarca" class="da-input" />
                    <span asp-validation-for="IdMarca" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="IdModelo" class="da-label">Modelo</label>
                    <input asp-for="IdModelo" class="da-input" />
                    <span asp-validation-for="IdModelo" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="Ano" class="da-label">Ano</label>
                    <input asp-for="Ano" class="da-input" />
                    <span asp-validation-for="Ano" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="Cor" class="da-label">Cor</label>
                    <input asp-for="Cor" class="da-input" />
                    <span asp-validation-for="Cor" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="Placa" class="da-label">Placa</label>
                    <input asp-for="Placa" class="da-input" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="Quilometragem" class="da-label">Quilometragem</label>
                    <input asp-for="Quilometragem" class="da-input" />
                    <span asp-validation-for="Quilometragem" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="Preco" class="da-label">Preço</label>
                    <input asp-for="Preco" class="da-input" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>
            <div class="da-action-row">
                <button type="submit" class="da-btn-primary">Cadastrar</button>
                <a asp-action="Index" class="da-btn-outline">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

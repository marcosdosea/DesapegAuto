@model DesapegAutoWeb.Models.VendaViewModel

@{
    ViewData["Title"] = "Editar Venda";
}

<div class="da-page">
    <h1 class="da-title">Editar Venda</h1>

    <section class="da-card da-card-pad">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />

            <div class="da-form-grid">
                <div class="da-field">
                    <label asp-for="DataVenda" class="da-label">Data da Venda</label>
                    <input asp-for="DataVenda" class="da-input" />
                    <span asp-validation-for="DataVenda" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="ValorFinal" class="da-label">Valor Final</label>
                    <input asp-for="ValorFinal" class="da-input" />
                    <span asp-validation-for="ValorFinal" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="FormaPagamento" class="da-label">Forma de Pagamento</label>
                    <input asp-for="FormaPagamento" class="da-input" />
                    <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="IdConcessionaria" class="da-label">Concessionaria</label>
                    <input asp-for="IdConcessionaria" class="da-input" />
                    <span asp-validation-for="IdConcessionaria" class="text-danger"></span>
                </div>
                <div class="da-field">
                    <label asp-for="IdPessoa" class="da-label">Pessoa (Comprador)</label>
                    <input asp-for="IdPessoa" class="da-input" />
                    <span asp-validation-for="IdPessoa" class="text-danger"></span>
                </div>
            </div>

            <div class="da-action-row">
                <button type="submit" class="da-btn-primary">Salvar</button>
                <a asp-action="Index" class="da-btn-outline">Voltar</a>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

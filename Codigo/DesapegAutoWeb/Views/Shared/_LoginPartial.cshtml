@using Microsoft.AspNetCore.Identity
@using DesapegAutoWeb.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="display:inline;">
            <button id="logout" type="submit" class="nav-link btn btn-link border-0" style="padding: 0;">Logout</button>
        </form>
}
else
{
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

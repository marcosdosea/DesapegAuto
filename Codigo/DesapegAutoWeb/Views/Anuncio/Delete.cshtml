@model DesapegAutoWeb.Models.AnuncioViewModel
@{
    ViewData["Title"] = "Excluir Anúncio";
}
<h2>Excluir Anúncio</h2>
<h4>Tem certeza que deseja excluir este anúncio?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Veículo</dt>
        <dd class="col-sm-10">@Model.IdVeiculo</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.StatusAnuncio</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

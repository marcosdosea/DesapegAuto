@model DesapegAutoWeb.Models.AnuncioViewModel
@{
    ViewData["Title"] = "Excluir Anúncio";
}

<div class="da-page">
    <h1 class="da-title">Excluir Anúncio</h1>

    <div class="da-confirm-box">
        <p>Tem certeza que deseja excluir este anúncio? Esta ação não pode ser desfeita.</p>
    </div>

    <div class="da-card da-card-pad">
        <div class="da-detail-list">
            <div class="da-detail-item">
                <p class="da-detail-item-label">Veículo</p>
                <p class="da-detail-item-value">@Model.IdVeiculo</p>
            </div>
            <div class="da-detail-item">
                <p class="da-detail-item-label">Status</p>
                <p class="da-detail-item-value">@Model.StatusAnuncio</p>
            </div>
            <div class="da-detail-item" style="grid-column: 1 / -1;">
                <p class="da-detail-item-label">Descrição</p>
                <p class="da-detail-item-value">@Model.Descricao</p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="da-action-row">
                <button type="submit" class="da-btn-danger">Excluir</button>
                <a asp-action="Index" class="da-btn-outline">Cancelar</a>
            </div>
        </form>
    </div>
</div>

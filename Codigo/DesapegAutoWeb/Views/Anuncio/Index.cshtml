@model IEnumerable<DesapegAutoWeb.Models.AnuncioViewModel>

@{
    ViewData["Title"] = "Anúncios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="admin-title mb-0">Anúncios</h1>
        <a asp-action="Create" class="btn btn-primary admin-btn-card">
            <i class="fa-solid fa-plus me-2"></i> Novo Anúncio
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-start p-3 mb-3 admin-card">
                    <div class="d-flex align-items-center">
                        <i class="fa-solid fa-car-side fa-2x me-4 text-primary"></i>
                        <div>
                            <h5 class="mb-1 fw-bold">
                                Veículo:
                                @(item.Veiculo != null ?
                                    ($"{item.Veiculo.NomeModelo ?? ""} - {item.Veiculo.NomeMarca ?? ""}") :
                                    $"ID {item.IdVeiculo}")
                            </h5>
                            <p class="mb-1 text-muted"><small>Data de Publicação: @item.DataPublicacao.ToShortDateString()</small></p>
                            <span class="badge bg-secondary">@item.StatusAnuncio</span>
                            <span class="badge bg-info text-dark ms-2">Visualizações: @item.Visualizacoes</span>
                        </div>
                    </div>
                    <div class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-2">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fa-solid fa-car-side empty-state-icon"></i>
            <p>Nenhum anúncio cadastrado.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fa-solid fa-plus me-2"></i> Criar meu primeiro anúncio
            </a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

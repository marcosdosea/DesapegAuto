@model DesapegAutoWeb.Models.AnuncioViewModel
@{
    ViewData["Title"] = "Anunciar Veículo";
}

<div class="da-page">
    <h1 class="da-title">Anunciar Veículo</h1>

    <section class="da-card da-card-pad">
        <form asp-action="Create" method="post" class="da-stack">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="da-grid-2">
                <div class="da-field">
                    <label asp-for="IdVeiculo" class="da-label">Marca</label>
                    <select asp-for="IdVeiculo" asp-items="ViewBag.Veiculos" class="da-select">
                        <option value="">Selecione a marca</option>
                    </select>
                    <span asp-validation-for="IdVeiculo" class="text-danger"></span>
                </div>

                <div class="da-field">
                    <label class="da-label">Modelo</label>
                    <input class="da-input" name="visual_modelo" placeholder="Modelo" />
                </div>

                <div class="da-field">
                    <label class="da-label">Cor</label>
                    <select class="da-select" name="visual_cor">
                        <option value="">Selecione a cor</option>
                        <option>Branco</option>
                        <option>Preto</option>
                        <option>Prata</option>
                        <option>Cinza</option>
                        <option>Vermelho</option>
                        <option>Azul</option>
                    </select>
                </div>

                <div class="da-field">
                    <label class="da-label">Ano</label>
                    <input type="number" class="da-input" name="visual_ano" placeholder="Ano" />
                </div>

                <div class="da-field">
                    <label class="da-label">Quilometragem</label>
                    <input type="number" class="da-input" name="visual_quilometragem" placeholder="Quilometragem" />
                </div>

                <div class="da-field">
                    <label class="da-label">Preço</label>
                    <input type="number" class="da-input" name="visual_preco" placeholder="Preço" />
                </div>

                <div class="da-field">
                    <label class="da-label">Placa</label>
                    <input class="da-input" name="visual_placa" placeholder="Placa" />
                </div>
            </div>

            <div class="da-field">
                <label asp-for="Descricao" class="da-label">Descrição</label>
                <textarea asp-for="Descricao" class="da-textarea" placeholder="Descreva o veículo"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="da-field">
                <p class="da-label">Opcionais</p>
                <div class="da-checkbox-grid">
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Ar condicionado" />Ar condicionado</label>
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Direção hidráulica" />Direção hidráulica</label>
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Vidros elétricos" />Vidros elétricos</label>
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Travas elétricas" />Travas elétricas</label>
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Airbag" />Airbag</label>
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Freios ABS" />Freios ABS</label>
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Central multimídia" />Central multimídia</label>
                    <label class="da-check-item"><input type="checkbox" name="opcionalItem" value="Câmera de ré" />Câmera de ré</label>
                </div>
                <input type="hidden" asp-for="Opcionais" id="opcionaisHidden" />
            </div>

            <div class="da-field">
                <label asp-for="IdVenda" class="da-label">Venda vinculada (opcional)</label>
                <select asp-for="IdVenda" asp-items="ViewBag.Vendas" class="da-select">
                    <option value="0">Nenhuma venda vinculada</option>
                </select>
            </div>

            <input type="hidden" asp-for="StatusAnuncio" value="D" />

            <div class="da-top-actions" style="margin-bottom:0;">
                <a asp-action="Index" class="da-btn da-btn-outline">Cancelar</a>
                <button type="submit" class="da-btn da-btn-primary">Anunciar veículo</button>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        (function () {
            var checkboxes = Array.from(document.querySelectorAll('input[name="opcionalItem"]'));
            var hidden = document.getElementById('opcionaisHidden');

            function syncOpcionais() {
                if (!hidden) {
                    return;
                }
                hidden.value = checkboxes
                    .filter(function (item) { return item.checked; })
                    .map(function (item) { return item.value; })
                    .join(', ');
            }

            checkboxes.forEach(function (item) {
                item.addEventListener('change', syncOpcionais);
            });
            syncOpcionais();
        })();
    </script>
}

@model IEnumerable<DesapegAutoWeb.Models.ModeloViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Administracao de Modelos";
    var modelos = Model?.ToList() ?? new List<DesapegAutoWeb.Models.ModeloViewModel>();
    var marcas = ViewBag.Marcas as List<SelectListItem> ?? new List<SelectListItem>();
    var categorias = ViewBag.Categorias as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="da-page">
    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <div class="alert alert-success" role="alert">@successMessage</div>
    }

    @if (TempData["ErrorMessage"] is string errorMessage)
    {
        <div class="alert alert-danger" role="alert">@errorMessage</div>
    }

    @if (!marcas.Any() || !categorias.Any())
    {
        <div class="alert alert-warning" role="alert">
            Para cadastrar modelos, cadastre ao menos uma marca e uma categoria antes.
        </div>
    }

    <div class="da-split-layout">
        <section class="da-card da-card-pad">
            <h2 class="da-subtitle">Cadastrar Modelo</h2>

            <form asp-action="Create" method="post" class="da-stack">
                <div class="da-field">
                    <label class="da-label" for="Nome">Nome do Modelo</label>
                    <input class="da-input" id="Nome" name="Nome" placeholder="Digite o nome do modelo" required />
                </div>

                <div class="da-field">
                    <label class="da-label" for="IdMarca">Marca</label>
                    <select class="da-input" id="IdMarca" name="IdMarca" required>
                        <option value="">Selecione a marca</option>
                        @foreach (var marca in marcas)
                        {
                            <option value="@marca.Value">@marca.Text</option>
                        }
                    </select>
                </div>

                <div class="da-field">
                    <label class="da-label" for="IdCategoria">Categoria</label>
                    <select class="da-input" id="IdCategoria" name="IdCategoria" required>
                        <option value="">Selecione a categoria</option>
                        @foreach (var categoria in categorias)
                        {
                            <option value="@categoria.Value">@categoria.Text</option>
                        }
                    </select>
                </div>

                <div class="da-field">
                    <label class="da-label" for="Versoes">Versoes</label>
                    <input class="da-input" id="Versoes" name="Versoes" placeholder="Separe por virgula. Ex.: GLI, XEi, Altis" />
                </div>

                <button type="submit" class="da-btn da-btn-primary da-btn-wide">Adicionar Modelo</button>
            </form>
        </section>

        <section class="da-card da-card-pad">
            <h2 class="da-subtitle">Modelos Existentes</h2>

            @if (modelos.Any())
            {
                <div class="da-list-rows">
                    @foreach (var item in modelos)
                    {
                        var versoes = (item.Versoes ?? string.Empty)
                            .Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries)
                            .Select(valor => valor.Trim())
                            .Where(valor => !string.IsNullOrWhiteSpace(valor))
                            .ToList();
                        var nomeMarca = string.IsNullOrWhiteSpace(item.NomeMarca) ? $"Marca #{item.IdMarca}" : item.NomeMarca;
                        var nomeCategoria = string.IsNullOrWhiteSpace(item.NomeCategoria)
                            ? (!string.IsNullOrWhiteSpace(item.Categoria) ? item.Categoria : $"Categoria #{item.IdCategoria}")
                            : item.NomeCategoria;

                        <div class="da-list-row" style="display:block;">
                            <div style="display:flex;justify-content:space-between;gap:.5rem;">
                                <div>
                                    <p class="da-list-name">@item.Nome</p>
                                    <p class="da-list-note">@nomeMarca • @nomeCategoria</p>
                                    @if (versoes.Any())
                                    {
                                        <div class="da-chips" style="margin-top:.35rem;">
                                            @foreach (var versao in versoes)
                                            {
                                                <span class="da-chip">@versao</span>
                                            }
                                        </div>
                                    }
                                </div>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="da-link-danger">Remover</a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="da-empty">Nenhum modelo cadastrado.</div>
            }

            <div class="da-nav-row">
                <a asp-controller="Marca" asp-action="Index" class="da-btn da-btn-outline">Ir para Marcas</a>
                <a asp-controller="Categoria" asp-action="Index" class="da-btn da-btn-outline">Ir para Categorias</a>
            </div>
        </section>
    </div>
</div>

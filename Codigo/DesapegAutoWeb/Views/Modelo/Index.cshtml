@model IEnumerable<DesapegAutoWeb.Models.ModeloViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Administracao de Modelos";
    var modelos = Model?.ToList() ?? new List<DesapegAutoWeb.Models.ModeloViewModel>();
    var marcas = ViewBag.Marcas as List<SelectListItem> ?? new List<SelectListItem>();
    var categorias = ViewBag.Categorias as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="da-page">
    @if (TempData["SuccessMessage"] is string successMessage)
    {
        <div class="da-toast-banner da-toast-banner--success" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
            @successMessage
        </div>
    }

    @if (TempData["ErrorMessage"] is string errorMessage)
    {
        <div class="da-toast-banner da-toast-banner--error" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
            @errorMessage
        </div>
    }

    @if (!marcas.Any() || !categorias.Any())
    {
        <div class="da-toast-banner da-toast-banner--error" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
            Para cadastrar modelos, cadastre ao menos uma marca e uma categoria antes.
        </div>
    }

    <nav class="da-admin-tabs" aria-label="Navegação admin">
        <a asp-controller="Marca" asp-action="Index" class="da-admin-tab">Marcas</a>
        <a asp-controller="Categoria" asp-action="Index" class="da-admin-tab">Categorias</a>
        <a asp-controller="Modelo" asp-action="Index" class="da-admin-tab da-admin-tab--active">Modelos</a>
        <a asp-controller="Concessionaria" asp-action="Index" class="da-admin-tab">Concessionárias</a>
    </nav>

    <div class="da-admin-layout">
        <section class="da-card da-card-pad">
            <h2 class="da-subtitle">Cadastrar Modelo</h2>

            <form asp-action="Create" method="post" class="da-stack">
                <div class="da-field">
                    <label class="da-label" for="Nome">Nome do Modelo</label>
                    <input class="da-input" id="Nome" name="Nome" placeholder="Digite o nome do modelo" required />
                </div>

                <div class="da-field">
                    <label class="da-label" for="IdMarca">Marca</label>
                    <select class="da-input" id="IdMarca" name="IdMarca" required>
                        <option value="">Selecione a marca</option>
                        @foreach (var marca in marcas)
                        {
                            <option value="@marca.Value">@marca.Text</option>
                        }
                    </select>
                </div>

                <div class="da-field">
                    <label class="da-label" for="IdCategoria">Categoria</label>
                    <select class="da-input" id="IdCategoria" name="IdCategoria" required>
                        <option value="">Selecione a categoria</option>
                        @foreach (var categoria in categorias)
                        {
                            <option value="@categoria.Value">@categoria.Text</option>
                        }
                    </select>
                </div>

                <div class="da-field">
                    <label class="da-label" for="Versoes">Versoes</label>
                    <input class="da-input" id="Versoes" name="Versoes" placeholder="Separe por virgula. Ex.: GLI, XEi, Altis" />
                </div>

                <button type="submit" class="da-btn da-btn-primary da-btn-wide">Adicionar Modelo</button>
            </form>
        </section>

        <section class="da-card da-card-pad">
            <h2 class="da-subtitle">
                Modelos Existentes
                <span class="da-count-badge">@modelos.Count</span>
            </h2>

            @if (modelos.Any())
            {
                <div class="da-table-wrap">
                    <table class="da-table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Marca</th>
                                <th>Categoria</th>
                                <th>Versões</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in modelos)
                            {
                                var versoes = (item.Versoes ?? string.Empty)
                                    .Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries)
                                    .Select(v => v.Trim())
                                    .Where(v => !string.IsNullOrWhiteSpace(v))
                                    .ToList();
                                var nomeMarca = string.IsNullOrWhiteSpace(item.NomeMarca) ? $"Marca #{item.IdMarca}" : item.NomeMarca;
                                var nomeCategoria = string.IsNullOrWhiteSpace(item.NomeCategoria)
                                    ? (!string.IsNullOrWhiteSpace(item.Categoria) ? item.Categoria : $"Categoria #{item.IdCategoria}")
                                    : item.NomeCategoria;

                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@nomeMarca</td>
                                    <td>@nomeCategoria</td>
                                    <td>
                                        @if (versoes.Any())
                                        {
                                            <div class="da-version-chips">
                                                @foreach (var versao in versoes)
                                                {
                                                    <span class="da-version-chip">@versao</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span style="color:var(--da-muted)">—</span>
                                        }
                                    </td>
                                    <td class="da-table-actions">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="da-action-edit" title="Editar">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                                            Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="da-action-delete" title="Remover">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="3 6 5 6 21 6"/><path d="M19 6l-1 14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 6"/><path d="M10 11v6"/><path d="M14 11v6"/><path d="M9 6V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2"/></svg>
                                            Remover
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="da-empty-state">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8"/><path d="M12 17v4"/></svg>
                    <p class="da-empty-state__title">Nenhum modelo cadastrado</p>
                    <p class="da-empty-state__desc">Cadastre o primeiro modelo usando o formulário ao lado.</p>
                </div>
            }
        </section>
    </div>
</div>

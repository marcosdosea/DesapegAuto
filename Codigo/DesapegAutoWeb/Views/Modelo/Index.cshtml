@model IEnumerable<DesapegAutoWeb.Models.ModeloViewModel>

@{
    ViewData["Title"] = "Modelos";
}

<div class="dashboard-header-container">
    <div class="dashboard-header-left">
        <h1 class="dashboard-title">Administração</h1>
    </div>
    <div class="dashboard-header-right">
        <span class="welcome-text-dashboard">Olá, Administrador</span>
        <i class="fa-solid fa-user-circle dashboard-icon"></i>
        <i class="fa-solid fa-circle-question dashboard-icon"></i>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="admin-card h-100">
            <h2 class="section-title">Cadastrar Modelo</h2>
            <form asp-action="Create" method="post" class="mt-3">
                <div class="form-group mb-3">
                    <label for="nomeModelo" class="form-label">Nome do Modelo</label>
                    <input type="text" class="form-control" id="nomeModelo" name="Nome" required placeholder="Ex: Corolla">
                </div>
                <div class="form-group mb-3">
                    <label for="categoria" class="form-label">Categoria</label>
                    <input type="text" class="form-control" id="categoria" name="Categoria" required placeholder="Ex: Sedan">
                </div>
                <div class="form-group mb-3">
                    <label for="versoes" class="form-label">Versões (opcional)</label>
                    <input type="text" class="form-control" id="versoes" name="Versoes" placeholder="Ex: GLI, Comfortline">
                </div>
                <div class="form-group mb-3">
                    <label for="idMarca" class="form-label">Id da Marca</label>
                    <input type="number" class="form-control" id="idMarca" name="IdMarca" required />
                </div>
                <button type="submit" class="admin-btn">Inserir Modelo</button>
            </form>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="admin-card h-100">
            <h2 class="section-title">Modelos Existentes</h2>
            @if (Model != null && Model.Any())
            {
                <ul class="list-unstyled mt-3">
                    @foreach (var item in Model)
                    {
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <strong>@item.Nome</strong>
                                <div class="text-muted">Categoria: @item.Categoria</div>
                                <div class="text-muted">Marca Id: @item.IdMarca</div>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">Detalhes</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-2">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Remover</a>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="empty-state">
                    <i class="fa-solid fa-car-side empty-state-icon"></i>
                    <p>Nenhum modelo cadastrado.</p>
                </div>
            }

            <div class="mt-4 text-end">
                <a asp-action="Index" asp-controller="Marca" class="btn btn-secondary me-2">Ir para Marcas</a>
                <a asp-action="Index" asp-controller="Categoria" class="btn btn-secondary">Ir para Categorias</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

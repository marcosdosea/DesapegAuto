@model DesapegAutoWeb.Models.ModeloViewModel

@{
    ViewData["Title"] = "Editar Modelo";
}


<div class="admin-card mt-4">
    <h2>Editar Modelo</h2>
    <hr />

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Categoria" class="form-label"></label>
            <input asp-for="Categoria" class="form-control" />
            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Versoes" class="form-label"></label>
            <input asp-for="Versoes" class="form-control" />
            <span asp-validation-for="Versoes" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IdMarca" class="form-label"></label>
            <input asp-for="IdMarca" class="form-control" />
            <span asp-validation-for="IdMarca" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@page
@model LoginModel

@{
 ViewData["Title"] = "Login";
 Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>@ViewData["Title"] - DesapegAuto</title>
 <style>
 :root {
 --bg-0: #0f0f10; --bg-1: #141416; --bg-2: #1b1c1f; --line: #26272b;
 --muted: #a9a9ac; --text: #e9e9ea; --text-dim: #cfcfd1;
 --btn: #e6e6e7; --btn-text: #111113; --focus: #d0d0d2;
 }
 * { box-sizing: border-box; }
 html, body { height:100%; }
 body { margin:0; font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; color: var(--text);
 background: linear-gradient(160deg, var(--bg-0), var(--bg-1)); display:flex; align-items:center; justify-content:center; }
 .auth { width:100%; max-width:480px; background: var(--bg-2); border:1px solid var(--line); border-radius:16px; overflow:hidden; box-shadow:010px30px rgba(0,0,0,.35); }
 .auth-hd { padding:28px24px; border-bottom:1px solid var(--line); }
 .brand { font-size:14px; letter-spacing: .18em; color: var(--muted); text-transform: uppercase; }
 .title { margin:6px00; font-weight:600; font-size:22px; color: var(--text); }


 .auth-bd {
    padding: 40px 30px;
}

.group {
 margin-bottom: 18px;
}

label {
 display: block;
 margin-bottom: 8px;
 font-size: 13px;
 color: var(--muted);
}

.control {
 width: 100%;
 padding: 14px 12px;
 border-radius: 12px;
 border: 1px solid var(--line);
 background: #15161a;
 color: var(--text-dim);
 outline: none;
 transition: border-color .2s, background .2s;
}

.control:focus {
 border-color: var(--focus);
 background: #17181d;
}

.form-check {
 display: flex;
 align-items: center;
 gap: 8px;
 margin: 8px 0;
 color: var(--muted);
}

.btn {
 width: 100%;
 padding: 14px;
 border: none;
 border-radius: 12px;
 background: var(--btn);
 color: var(--btn-text);
 font-weight: 600;
 cursor: pointer;
 transition: transform .15s ease, filter .2s ease;
}

.btn:hover {
 filter: brightness(0.96);
}

.btn:active {
 transform: translateY(1px);
}

.validation-summary {
 background: #16171b;
 border: 1px solid var(--line);
 color: var(--muted);
 border-radius: 12px;
 padding: 12px;
 margin-bottom: 16px;
}

.auth-ft {
 padding: 16px 24px;
 border-top: 1px solid var(--line);
 color: var(--muted);
 text-align: center;
}

.link {
 color: var(--text);
 text-underline-offset: 3px;
 text-decoration: none;
 border-bottom: 1px dashed var(--line);
}

.link:hover {
 border-bottom-color: var(--focus);
}
 </style>
</head>
<body>
 <main class="auth" aria-labelledby="login-titulo">
 <header class="auth-hd">
 <div class="brand">DesapegAuto</div>
 <h1 id="login-titulo" class="title">Entrar</h1>
 </header>
 <section class="auth-bd">
 <form id="account" method="post" novalidate>
 <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
 <div class="group">
 <label asp-for="Input.Email">Email</label>
 <input asp-for="Input.Email" class="control" autocomplete="username" placeholder="seu@email.com" />
 <span asp-validation-for="Input.Email" class="text-danger"></span>
 </div>
 <div class="group">
 <label asp-for="Input.Password">Senha</label>
 <input asp-for="Input.Password" class="control" type="password" autocomplete="current-password" placeholder="••••••" />
 <span asp-validation-for="Input.Password" class="text-danger"></span>
 </div>
 <div class="form-check">
 <input class="form-check-input" asp-for="Input.RememberMe" />
 <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
 </div>
 <button id="login-submit" type="submit" class="btn">Entrar</button>
 <div style="margin-top:12px; text-align:center;">
 <a id="forgot-password" class="link" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
 </div>
 </form>
 </section>
 <footer class="auth-ft">
 Não tem uma conta? <a class="link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar conta</a>
 </footer>
 </main>

 <script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
 <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

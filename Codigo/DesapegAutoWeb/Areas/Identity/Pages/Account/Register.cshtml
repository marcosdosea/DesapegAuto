@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DesapegAuto</title>
    <style>
        :root {
            --bg-0: #0f0f10;
            --bg-1: #141416;
            --bg-2: #1b1c1f;
            --line: #26272b;
            --muted: #a9a9ac;
            --text: #e9e9ea;
            --text-dim: #cfcfd1;
            --btn: #e6e6e7;
            --btn-text: #111113;
            --focus: #d0d0d2;
        }

        * {
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
        }

        body {
            margin: 0;
            font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            color: var(--text);
            background: linear-gradient(160deg, var(--bg-0), var(--bg-1));
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .auth {
            width: 100%;
            max-width: 480px;
            background: var(--bg-2);
            border: 1px solid var(--line);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
        }

        .auth-hd {
            padding: 28px 24px;
            border-bottom: 1px solid var(--line);
        }

        .brand {
            font-size: 14px;
            letter-spacing: 0.18em;
            color: var(--muted);
            text-transform: uppercase;
        }

        .title {
            margin: 6px 0 0 0;
            font-weight: 600;
            font-size: 22px;
            color: var(--text);
        }

        .auth-bd {
            padding: 28px 24px;
        }

        .group {
            margin-bottom: 18px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-size: 13px;
            color: var(--muted);
        }

        .control,
        .select {
            width: 100%;
            padding: 14px 12px;
            border-radius: 12px;
            border: 1px solid var(--line);
            background: #15161a;
            color: var(--text-dim);
            outline: none;
            transition: border-color 0.2s, background 0.2s;
        }

        .control:focus,
        .select:focus {
            border-color: var(--focus);
            background: #17181d;
        }

        .text-danger {
            display: block;
            margin-top: 8px;
            font-size: 12px;
            color: #bfbfc2;
        }

        .validation-summary {
            background: #16171b;
            border: 1px solid var(--line);
            color: var(--muted);
            border-radius: 12px;
            padding: 12px;
            margin-bottom: 16px;
        }

        .role-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 8px;
        }

        .role {
            position: relative;
        }

        .role input {
            display: none;
        }

        .chip {
            display: block;
            text-align: center;
            padding: 12px 10px;
            border: 1px solid var(--line);
            border-radius: 12px;
            background: #15161a;
            color: var(--text-dim);
            transition: all 0.2s;
            cursor: pointer;
        }

        .role input:checked+.chip {
            border-color: var(--focus);
            background: #1a1b20;
            color: var(--text);
        }

        .chip:hover {
            border-color: var(--focus);
        }

        .btn {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 12px;
            background: var(--btn);
            color: var(--btn-text);
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.15s ease, filter 0.2s ease;
        }

        .btn:hover {
            filter: brightness(0.96);
        }

        .btn:active {
            transform: translateY(1px);
        }

        .auth-ft {
            padding: 16px 24px;
            border-top: 1px solid var(--line);
            color: var(--muted);
            text-align: center;
        }

        .link {
            color: var(--text);
            text-underline-offset: 3px;
            text-decoration: none;
            border-bottom: 1px dashed var(--line);
        }

        .link:hover {
            border-bottom-color: var(--focus);
        }

    </style>
</head>

<body>
    <main class="auth" aria-labelledby="cadastro-titulo">
        <header class="auth-hd">
            <div class="brand">DesapegAuto</div>
            <h1 id="cadastro-titulo" class="title">Criar conta</h1>
        </header>
        <section class="auth-bd">
            <form id="registerForm" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                <div class="group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="control" autocomplete="username" placeholder="seu@email.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="group">
                    <label asp-for="Input.Password">Senha</label>
                    <input asp-for="Input.Password" class="control" type="password" autocomplete="new-password"
                        placeholder="••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="group">
                    <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                    <input asp-for="Input.ConfirmPassword" class="control" type="password" autocomplete="new-password"
                        placeholder="••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="group">
                    <label asp-for="Input.Role">Tipo de conta</label>
                    <div class="role-grid">
                        <div class="role">
                            <input type="radio" asp-for="Input.Role" value="Cliente" id="roleCliente" checked />
                            <label for="roleCliente" class="chip">Cliente</label>
                        </div>
                        <div class="role">
                            <input type="radio" asp-for="Input.Role" value="Funcionario" id="roleFuncionario" />
                            <label for="roleFuncionario" class="chip">Funcionário</label>
                        </div>
                        <div class="role">
                            <input type="radio" asp-for="Input.Role" value="Admin" id="roleAdmin" />
                            <label for="roleAdmin" class="chip">Admin</label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn">Criar conta</button>
            </form>
        </section>
        <footer class="auth-ft">
            Já tem uma conta? <a class="link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Fazer login</a>
        </footer>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>

@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DesapegAuto</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap');

        :root {
            --bg: #eef3ff;
            --card: #ffffff;
            --primary: #2f5ae8;
            --primary-dark: #2448c5;
            --text: #1b2b5a;
            --muted: #5f6d8c;
            --line: #d6e1ff;
            --focus: rgba(47, 90, 232, 0.25);
        }

        * { box-sizing: border-box; }
        html, body { height: 100%; }

        body {
            margin: 0;
            font-family: "Sora", "Segoe UI", sans-serif;
            color: var(--text);
            background: radial-gradient(circle at top, #f7faff, var(--bg));
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        .auth {
            width: 100%;
            max-width: 520px;
            background: var(--card);
            border: 1px solid var(--line);
            border-radius: 16px;
            box-shadow: 0 18px 40px rgba(26, 64, 160, 0.12);
            overflow: hidden;
        }

        .auth-hd {
            padding: 28px 32px 10px;
            text-align: center;
        }

        .brand {
            font-size: 24px;
            font-weight: 800;
            color: var(--primary);
            margin: 0 0 6px;
        }

        .title {
            margin: 0;
            font-weight: 700;
            font-size: 18px;
            color: var(--text);
        }

        .auth-bd { padding: 24px 32px 30px; }

        .group { margin-bottom: 16px; }

        label {
            display: block;
            margin-bottom: 8px;
            font-size: 12px;
            font-weight: 700;
            color: var(--primary);
        }

        .control,
        .select {
            width: 100%;
            padding: 12px 14px;
            border-radius: 10px;
            border: 1px solid var(--line);
            background: #f8faff;
            color: var(--text);
            font-size: 14px;
            outline: none;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

        .control:focus,
        .select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px var(--focus);
        }

        .text-danger {
            display: block;
            margin-top: 6px;
            font-size: 12px;
            color: var(--muted);
        }

        .validation-summary {
            background: #f7f9ff;
            border: 1px solid var(--line);
            color: var(--muted);
            border-radius: 12px;
            padding: 12px;
            margin-bottom: 16px;
            font-size: 13px;
        }

        .role-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 8px;
        }

        .role input { display: none; }

        .chip {
            display: block;
            text-align: center;
            padding: 10px 8px;
            border: 1px solid var(--line);
            border-radius: 10px;
            background: #ffffff;
            color: var(--text);
            font-weight: 600;
            transition: all 0.2s;
            cursor: pointer;
        }

        .role input:checked + .chip {
            border-color: var(--primary);
            background: #eef3ff;
            color: var(--primary);
        }

        .chip:hover { border-color: var(--primary); }

        .btn {
            width: 100%;
            padding: 12px 14px;
            border: none;
            border-radius: 10px;
            background: var(--primary);
            color: #ffffff;
            font-weight: 700;
            cursor: pointer;
            transition: transform 0.15s ease, background-color 0.2s ease;
        }

        .btn:hover { background: var(--primary-dark); }

        .btn:active { transform: translateY(1px); }

        .btn-outline {
            width: 100%;
            padding: 12px 14px;
            border-radius: 10px;
            border: 1px solid var(--line);
            background: #ffffff;
            color: var(--primary);
            font-weight: 700;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }

        .btn-outline:hover { border-color: var(--primary); }

        .auth-ft { display: none; }

        .link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
        }

        .link:hover {
            text-decoration: underline;
            text-underline-offset: 3px;
        }
    </style>
</head>

<body>
    <main class="auth" aria-labelledby="cadastro-titulo">
        <header class="auth-hd">
            <div class="brand">DesapegAuto</div>
            <h1 id="cadastro-titulo" class="title">Criar conta</h1>
        </header>
        <section class="auth-bd">
            <form id="registerForm" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                <div class="group">
                    <label asp-for="Input.Email">E-mail</label>
                    <input asp-for="Input.Email" class="control" autocomplete="username" placeholder="Digite seu e-mail" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="group">
                    <label asp-for="Input.Password">Senha</label>
                    <input asp-for="Input.Password" class="control" type="password" autocomplete="new-password"
                        placeholder="••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="group">
                    <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                    <input asp-for="Input.ConfirmPassword" class="control" type="password" autocomplete="new-password"
                        placeholder="••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="group">
                    <label asp-for="Input.Role">Tipo de conta</label>
                    <div class="role-grid">
                        <label class="role">
                            <input type="radio" asp-for="Input.Role" value="Cliente" checked />
                            <span class="chip">Cliente</span>
                        </label>
                        <label class="role">
                            <input type="radio" asp-for="Input.Role" value="Funcionario" />
                            <span class="chip">Funcionario</span>
                        </label>
                        <label class="role">
                            <input type="radio" asp-for="Input.Role" value="Admin" />
                            <span class="chip">Admin</span>
                        </label>
                    </div>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn">Criar conta</button>
                <a class="btn-outline" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Fazer login</a>
            </form>
        </section>
        <footer class="auth-ft"></footer>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
